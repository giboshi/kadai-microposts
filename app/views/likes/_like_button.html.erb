<% if current_user.likeing?(micropost) %>
  <%= form_for(current_user.likes.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %> <%#find_by(カラム: 値) %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'Unlike', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'Like', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>
